{
  "name": "Lab Dojo",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    }
  },
  "postCreateCommand": "pip install --quiet -e . && echo '✓ Lab Dojo installed'",
  "postStartCommand": "nohup labdojo > /tmp/labdojo.log 2>&1 & sleep 3 && echo '✓ Lab Dojo running at http://localhost:8080'",
  "forwardPorts": [8080],
  "portsAttributes": {
    "8080": {
      "label": "Lab Dojo",
      "onAutoForward": "openBrowser"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python"
      }
    }
  }
}
